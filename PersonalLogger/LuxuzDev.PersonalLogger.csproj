<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>

		<!-- Información del paquete -->
		<PackageId>LuxuzDev.PersonalLogger</PackageId>
		<Version>1.0.0</Version>
		<Authors>Angel Hernández</Authors>
		<Company>LuxuzDev</Company>
		<Description>Logger personal con consola PowerShell independiente, colores por tipo y archivo UTF-8.</Description>
		<PackageTags>logging logger console file logs</PackageTags>
		<RepositoryUrl>https://github.com/LuxuzDev/PersonalLogger</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Nullable>enable</Nullable>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>

	</PropertyGroup>

	<ItemGroup>
		<None Include="../README.md" Pack="true" PackagePath="\" />
		<None Include="../icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>


</Project>
